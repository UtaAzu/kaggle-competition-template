{
  "name": "Kaggle Competition Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",

  // --- Codespacesが起動した後に、自動で実行されるコマンド ---
  "postCreateCommand": "python3 -m venv .venv && ./.venv/bin/python -m pip install -r requirements.txt",

  // --- VS Codeのカスタマイズ設定 ---
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "eamodio.gitlens",
        "ms-python.black-formatter",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        // Pythonインタープリターとして、自動作成した仮想環境をデフォルトに設定
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python"
      }
    }
  }
}
